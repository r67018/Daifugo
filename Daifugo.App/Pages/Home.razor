@page "/"
@using Daifugo.App.Shared

<PageTitle>大富豪</PageTitle>

@if (_gameStarted)
{
    <DaifugoGamePlay PlayerCount="_playerCount" SimulationCount="_simulationCount" />
}
else
{
    <MudPaper Class="pa-4 mb-4">
        <MudSlider @bind-Value="_playerCount" Min="2" Max="5" Step="1" Color="Color.Info" ValueLabel="true">プレイヤーの人数: @_playerCount</MudSlider>
        <MudSlider @bind-Value="_simulationCount" Min="1" Max="50" Step="1" Color="Color.Info" ValueLabel="true">シミュレーション回数: @_simulationCount</MudSlider>
    </MudPaper>

    <MudButton OnClick="@OnGameStart" Variant="Variant.Filled" Color="Color.Primary">
        Start Game
    </MudButton>
}

@code
{
    private int _playerCount = 4;
    private int _simulationCount = 1;
    private bool _gameStarted;

    private void OnGameStart()
    {
        _gameStarted = true;
    }
}
